# Cloudflare Pages Cache Headers
# https://developers.cloudflare.com/pages/configuration/headers/

# HTML pages - short cache, always revalidate
/*.html
  Cache-Control: public, max-age=0, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate

/dashboard
  Cache-Control: public, max-age=0, must-revalidate

/dashboard/*
  Cache-Control: public, max-age=0, must-revalidate

/upload
  Cache-Control: public, max-age=0, must-revalidate

/manual-entry
  Cache-Control: public, max-age=0, must-revalidate

/share/*
  Cache-Control: public, max-age=0, must-revalidate

# Immutable assets - long cache (1 year)
# SvelteKit hashes these filenames, so they're safe to cache forever
/_app/immutable/*
  Cache-Control: public, max-age=31536000, immutable

# Static assets with content hashing
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images and fonts - long cache (1 year)
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Favicon specifically
/favicon.png
  Cache-Control: public, max-age=604800

# Robots.txt - moderate cache (1 day)
/robots.txt
  Cache-Control: public, max-age=86400
